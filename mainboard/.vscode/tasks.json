{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build project",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "type": "shell",
            "command": "C:\\MinGW\\bin\\make.EXE",
            "args": [
                "GCC_PATH=C:/GNU_Tools_Arm_Embedded/bin",
                "-j9"
            ],
            "problemMatcher": {
                "pattern": {
                    "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "severity": 4,
                    "message": 5
                }
            },
            "presentation": {
                "focus": true
            }
        },
        {
            "label": "Compile current file",
            "type": "shell",
            "command": "C:\\GNU_Tools_Arm_Embedded\\bin\\arm-none-eabi-gcc.EXE",
            "args": [
                "-c",
                "-DUSE_HAL_DRIVER",
                "-DSTM32F407xx",
                "-IModules/include",
                "-IDrivers/CMSIS/DSP/Include",
                "-IInc",
                "-IDrivers/STM32F4xx_HAL_Driver/Inc",
                "-IDrivers/STM32F4xx_HAL_Driver/Inc/Legacy",
                "-IMiddlewares/Third_Party/FreeRTOS/Source/include",
                "-IMiddlewares/Third_Party/FreeRTOS/Source/CMSIS_RTOS",
                "-IMiddlewares/Third_Party/FreeRTOS/Source/portable/GCC/ARM_CM4F",
                "-IDrivers/CMSIS/Device/ST/STM32F4xx/Include",
                "-IDrivers/CMSIS/Include",
                "-IDrivers/CMSIS/Include",
                "-mcpu=cortex-m4",
                "-mthumb",
                "-mfpu=fpv4-sp-d16",
                "-mfloat-abi=hard",
                "-DUSE_HAL_DRIVER",
                "-DSTM32F407xx",
                "-IModules/include",
                "-IDrivers/CMSIS/DSP/Include",
                "-IInc",
                "-IDrivers/STM32F4xx_HAL_Driver/Inc",
                "-IDrivers/STM32F4xx_HAL_Driver/Inc/Legacy",
                "-IMiddlewares/Third_Party/FreeRTOS/Source/include",
                "-IMiddlewares/Third_Party/FreeRTOS/Source/CMSIS_RTOS",
                "-IMiddlewares/Third_Party/FreeRTOS/Source/portable/GCC/ARM_CM4F",
                "-IDrivers/CMSIS/Device/ST/STM32F4xx/Include",
                "-IDrivers/CMSIS/Include",
                "-IDrivers/CMSIS/Include",
                "-Og",
                "-Wall",
                "-fdata-sections",
                "-ffunction-sections",
                "-D",
                "__FPU_PRESENT=1",
                "-D",
                "ARM_MATH_CM4",
                "-g",
                "-gdwarf-2",
                "-MMD",
                "-MP",
                "-MF'build/${fileBasenameNoExtension}.d'",
                "'${relativeFile}'",
                "-o",
                "'build/${fileBasenameNoExtension}.o'"
            ],
            "problemMatcher": {
                "pattern": {
                    "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "severity": 4,
                    "message": 5
                }
            },
            "presentation": {
                "focus": true
            }
        },
        {
            "label": "Delete build folder",
            "type": "shell",
            "command": "C:\\MinGW\\bin\\make.EXE",
            "args": [
                "clean"
            ],
            "problemMatcher": [],
            "presentation": {
                "focus": false
            }
        },
        {
            "label": "CPU: Build, Download and run",
            "type": "shell",
            "command": "C:\\OpenOCD-20200408-0.10.0\\bin\\openocd.EXE",
            "args": [
                "-f",
                "C:/OpenOCD-20200408-0.10.0/share/openocd/scripts/interface/cmsis-dap.cfg",
                "-f",
                ".vscode/stm32f4x.cfg",
                "-c",
                "program build/mainboard.elf verify reset exit"
            ],
            "problemMatcher": [],
            "dependsOn": "Build project"
        },
        {
            "label": "CPU: Download and run",
            "type": "shell",
            "command": "C:\\OpenOCD-20200408-0.10.0\\bin\\openocd.EXE",
            "args": [
                "-f",
                "C:/OpenOCD-20200408-0.10.0/share/openocd/scripts/interface/cmsis-dap.cfg",
                "-f",
                ".vscode/stm32f4x.cfg",
                "-c",
                "program build/mainboard.elf verify reset exit"
            ],
            "problemMatcher": []
        },
        {
            "label": "CPU: Reset and run",
            "type": "shell",
            "command": "C:\\OpenOCD-20200408-0.10.0\\bin\\openocd.EXE",
            "args": [
                "-f",
                "C:/OpenOCD-20200408-0.10.0/share/openocd/scripts/interface/cmsis-dap.cfg",
                "-f",
                ".vscode/stm32f4x.cfg",
                "-c init",
                "-c reset",
                "-c exit"
            ],
            "problemMatcher": []
        },
        {
            "label": "CPU: Halt",
            "type": "shell",
            "command": "C:\\OpenOCD-20200408-0.10.0\\bin\\openocd.EXE",
            "args": [
                "-f",
                "C:/OpenOCD-20200408-0.10.0/share/openocd/scripts/interface/cmsis-dap.cfg",
                "-f",
                ".vscode/stm32f4x.cfg",
                "-c init",
                "-c halt",
                "-c exit"
            ],
            "problemMatcher": []
        },
        {
            "label": "CPU: Run",
            "type": "shell",
            "command": "C:\\OpenOCD-20200408-0.10.0\\bin\\openocd.EXE",
            "args": [
                "-f",
                "C:/OpenOCD-20200408-0.10.0/share/openocd/scripts/interface/cmsis-dap.cfg",
                "-f",
                ".vscode/stm32f4x.cfg",
                "-c init",
                "-c resume",
                "-c exit"
            ],
            "problemMatcher": []
        },
        {
            "label": "Run Python file",
            "type": "shell",
            "command": "python",
            "args": [
                "${file}"
            ],
            "presentation": {
                "focus": true
            },
            "problemMatcher": []
        },
        {
            "label": "Open CubeMX project",
            "type": "shell",
            "command": "start",
            "args": [
                "mainboard.ioc"
            ],
            "presentation": {
                "focus": false
            },
            "problemMatcher": []
        },
        {
            "label": "Update workspace",
            "type": "shell",
            "command": "python",
            "args": [
                "${workspaceFolder}/ideScripts/update.py"
            ],
            "presentation": {
                "focus": true
            },
            "problemMatcher": []
        }
    ]
}